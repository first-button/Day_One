FROM python:3.11-slim

WORKDIR /app

COPY firstbutton/src/backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY firstbutton/src/backend/ ./src/backend/

WORKDIR /app/src/backend/demo/codes

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
